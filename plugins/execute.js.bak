'use strict'

const { exec } = require('child_process')
const syntax = require('syntax-error')

module.exports = {
  meta: {
    name: 'eval',
    events: true,
    owner: true
  },

  async execute(m, ctx) {
    const { Func, sock, body, text } = ctx
    if (body === '=>') {
      try {
        const result = await eval(`(async () => { return ${text} })()`)
        await sock.reply(
          m.chat,
          Func.jsonFormat(result),
          m
        )
      } catch (e) {
        const err = syntax(text) || e
        await sock.reply(
          m.chat,
          Func.jsonFormat(err),
          m
        )
      }
    } else if (body === '>') {
      try {
        const result = await eval(`(async () => { ${text} })()`)
        await sock.reply(
          m.chat,
          Func.jsonFormat(result),
          m
        )
      } catch (e) {
        const err = syntax(text) || e
        await sock.reply(
          m.chat,
          Func.jsonFormat(err),
          m
        )
      }
    } else if (body === '$') {
      exec(text.trim(), (err, stdout, stderr) => {
        if (err) return m.reply(Func.jsonFormat(err))
        if (stderr) return m.reply(stderr.toString())
        if (stdout) return m.reply(stdout.toString())
      })
    }
  }
}